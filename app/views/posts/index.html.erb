<h1>Posts</h1>

<ul>
  <% @posts.each do |post| %>
    <li>
      <a href="<%= post_path(post) %>">
        <%= post.title %>
      </a> 
      <div>
        author: <%= 
        if user_signed_in?
          post.user.username
        else
          'sign in to view author'
        end
        %>
      </div>
    </li>
  <% end %>
</ul>